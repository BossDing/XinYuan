<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="blurActionbarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="Line">
        <item name="android:background">@color/boder</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>


    <style name="AnimationFade">
        <item name="android:inAnimation">@anim/popwin_top_in</item>
        <item name="android:outAnimation">@anim/popwin_top_out</item>
    </style>


    <style name="evaluate_text_style">
        <item name="android:textSize">@dimen/tv_Normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CommonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/colorTransparency</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>


    <style name="GoodsNameTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_Normal</item>
        <item name="android:textColor">@color/tv_name</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="GoodsPriceTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_Regular</item>
        <item name="android:textColor">@color/tv_price</item>

    </style>


    <style name="RegularTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_Regular</item>
        <item name="android:textColor">@color/tv_name</item>

    </style>
    <style name="NormalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_Normal</item>
        <item name="android:textColor">@color/tv_name</item>

    </style>
    <style name="LightTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_light</item>
        <item name="android:textColor">@color/tv_name</item>

    </style>
    <style name="SmallTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_small</item>
        <item name="android:textColor">@color/tv_name</item>

    </style>

    <style name="NormalHintTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_Normal</item>
        <item name="android:textColor">@color/tv_hint</item>

    </style>

    <style name="SmallHintTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_small</item>
        <item name="android:textColor">@color/tv_hint</item>

    </style>
</resources>
