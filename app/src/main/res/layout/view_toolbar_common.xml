<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/act_home_scan_de"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_center"
            style="@style/RegularTextView"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/ll_search_layout"
            android:layout_width="700px"
            android:layout_height="90px"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_bg_normal"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/category_et_search"
                android:layout_width="610px"
                android:layout_height="90px"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:focusableInTouchMode="false"
                android:hint="@string/search_search_hint"
                android:padding="20px"
                android:paddingLeft="10px"
                android:singleLine="true"
                android:textColor="@color/tv_name"
                android:textColorHint="@color/tv_hint"
                android:textSize="@dimen/tv_light"/>

            <ImageView
                android:id="@+id/iv_search_go"
                android:layout_width="90px"
                android:layout_height="90px"
                android:background="@drawable/btn_bg_gray"
                android:padding="10px"
                android:src="@drawable/act_home_search_de"
                />


        </LinearLayout>


        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/act_home_msg"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_right"
            style="@style/RegularTextView"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
    </RelativeLayout>

</android.support.v7.widget.Toolbar>