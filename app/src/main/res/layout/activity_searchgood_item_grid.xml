<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLine"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1px"
        android:layout_marginLeft="1px"
        android:layout_marginRight="1px"
        android:layout_marginTop="1px"
        android:background="@color/bg_white"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivGoodPic"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="5dp"
            />


        <TextView
            android:id="@+id/tv_goods_name"
            style="@style/GoodsNameTextView"
            android:layout_below="@id/ivGoodPic"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/tv_goods_price"
            style="@style/GoodsPriceTextView"
            android:layout_below="@id/tv_goods_name"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_goods_sellnum"
            style="@style/SmallHintTextView"
            android:layout_below="@id/tv_goods_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_goods_price"/>


    </RelativeLayout>


</FrameLayout>