<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:background="@color/colorPrimary"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/bg_white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_header_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:src="@drawable/icon_back"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_header_center"
            style="@style/RegularTextView"
            android:layout_centerInParent="true"
            />

        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="230dp"
            android:layout_height="90px"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_bg_normal"
            android:orientation="horizontal"
            android:visibility="gone">


            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="90px"
                android:layout_marginLeft="10px">

                <EditText
                    android:id="@+id/search_et"
                    android:layout_width="200dp"
                    android:layout_height="90px"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="@string/search_search_hint"
                    android:padding="20px"
                    android:paddingLeft="10px"
                    android:singleLine="true"
                    android:textColor="@color/tv_name"
                    android:textColorHint="@color/tv_hint"
                    android:textSize="@dimen/tv_light"/>

                <ImageView
                    android:id="@+id/seach_btn_delete"
                    android:layout_width="72px"
                    android:layout_height="72px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10px"
                    android:padding="10px"
                    android:src="@drawable/icon_close"
                    android:visibility="gone"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/search_btn_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_bg_gray"
                android:padding="10px"
                android:src="@drawable/act_home_search_de"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_header_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:textColor="@color/tv_name"
            android:textSize="45px"
            android:visibility="gone"/>


        <RelativeLayout
            android:id="@+id/rl_header_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/act_home_btn_msg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/act_home_msg"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:src="@color/tv_price"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_header_msg_de"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/act_home_btn_msg_de"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/act_home_msg_de"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:src="@color/tv_price"/>
        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.Toolbar>