<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/good_show_up"/>

    <TextView
        android:id="@+id/tvGood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:background="@color/search_sort_bg"
        android:drawableLeft="@drawable/goods_w"
        android:drawablePadding="18px"
        android:padding="10dp"
        android:text="商品"
        android:textColor="@color/bg_white"/>

    <TextView
        android:id="@+id/tvStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGood"
        android:background="@color/search_sort_bg"
        android:drawableLeft="@drawable/store_secelt_w"
        android:drawablePadding="18px"
        android:padding="30px"
        android:text="店铺"
        android:textColor="@color/bg_white"/>
</com.zhy.autolayout.AutoRelativeLayout>
