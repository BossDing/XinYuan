<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_toolbar"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/colorPrimaryDark"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bg_white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/category_btn_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/act_home_scan_de"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/btn_bg_normal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/category_et_search"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="@null"
                android:focusableInTouchMode="false"
                android:hint="@string/search_search_hint"
                android:padding="10dp"
                android:paddingLeft="10px"
                android:paddingRight="30dp"
                android:singleLine="true"
                android:textColor="@color/tv_name"
                android:textColorHint="@color/tv_hint"
                android:textSize="@dimen/tv_light"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_bg_gray"
                android:padding="8dp"
                android:src="@drawable/act_home_search_de"/>


        </RelativeLayout>


        <ImageView
            android:id="@+id/category_btn_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/act_home_msg_de"/>

    </RelativeLayout>
</android.support.v7.widget.Toolbar>