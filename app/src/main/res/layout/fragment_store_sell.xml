<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="220dp"
                                       android:padding="10dp">

    <RelativeLayout
        android:id="@+id/iv_store_co_1"
        android:layout_width="120dp"
        android:layout_height="205dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/test_store_home_1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTransparency_B"
            android:gravity="center"
            android:text="已售：2563"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/tv_light"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/iv_store_co_2"
        android:layout_width="210dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/store_home_2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTransparency_B"
            android:gravity="center"
            android:text="已售：2563"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/tv_light"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/iv_store_co_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/store_home_3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTransparency_B"
            android:gravity="center"
            android:text="已售：2563"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/tv_light"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/iv_store_co_4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/iv_store_co_3"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_store_4"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTransparency_B"
            android:gravity="center"
            android:text="已售：2563"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/tv_light"/>


    </RelativeLayout>
</RelativeLayout>