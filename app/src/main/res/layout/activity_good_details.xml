<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_back"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <!-- 商品、详情、评价切换的控件 -->


            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tl_main"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/bg_white"
                app:tl_divider_width="1px"
                app:tl_indicator_color="@color/colorPrimaryDark"
                app:tl_indicator_height="4dp"
                app:tl_indicator_width_equal_title="true"
                app:tl_tab_padding="10dp"
                app:tl_textSelectColor="@color/colorPrimaryDark"
                app:tl_textUnselectColor="@color/tv_name"
                app:tl_textsize="15dp"
                app:tl_underline_gravity="BOTTOM"
                app:tl_underline_height="2px"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/good_detail_title"
                android:textColor="@color/tv_name"
                android:textSize="@dimen/tv_Regular"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/detail_btn_msg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/act_home_msg_de"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@color/tv_price"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colorLine"/>

    <com.xinyuan.xyshop.widget.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:background="@color/bg_white"
        android:orientation="horizontal"

        android:translationZ="10dp">


        <Button
            android:id="@+id/bt_service"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/bg_white"
            android:drawableTop="@drawable/ic_store_service"
            android:padding="5dp"
            android:drawablePadding="3dp"
            android:text="客服"
            android:textColor="@color/tv_hint"
            android:textSize="@dimen/tv_small"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/colorLine"/>

        <Button
            android:id="@+id/bt_store"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/bg_white"
            android:drawableTop="@drawable/ic_store"
            android:padding="5dp"
            android:drawablePadding="3dp"
            android:text="店铺"
            android:textColor="@color/tv_hint"
            android:textSize="@dimen/tv_small"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/colorLine"/>

        <CheckBox
            android:id="@+id/cb_store_fv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/bg_white"
            android:button="@null"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_store_fav_de"
            android:padding="5dp"
            android:text="收藏"
            android:drawablePadding="3dp"
            android:textColor="@color/tv_hint"
            android:textSize="@dimen/tv_small"/>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/bg_gray"/>

        <Button
            android:id="@+id/bt_add_car"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:text="加入购物车"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/tv_Regular"/>

        <View
            android:layout_width="3px"
            android:layout_height="match_parent"
            android:background="@color/bg_white"/>

        <Button
            android:id="@+id/bt_goos_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@color/colorPrimaryDark"
            android:text="立即购买"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/tv_Regular"/>
    </LinearLayout>
</LinearLayout>
