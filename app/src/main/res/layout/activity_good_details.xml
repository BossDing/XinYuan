<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     xmlns:tools="http://schemas.android.com/tools"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_title_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_back"/>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <!-- 商品、详情、评价切换的控件 -->


                <com.flyco.tablayout.SlidingTabLayout
                    android:id="@+id/tl_main"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="50px"
                    android:background="@color/bg_white"
                    app:tl_divider_width="1px"
                    app:tl_indicator_color="@color/colorPrimaryDark"
                    app:tl_indicator_height="4dp"
                    app:tl_indicator_width_equal_title="true"
                    app:tl_tab_padding="30px"
                    app:tl_textSelectColor="@color/colorPrimaryDark"
                    app:tl_textUnselectColor="@color/tv_name"
                    app:tl_textsize="15dp"
                    app:tl_underline_gravity="BOTTOM"
                    />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/good_detail_title"
                    android:textColor="@color/tv_name"
                    android:textSize="@dimen/tv_Regular"
                    android:visibility="gone"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/detail_btn_msg"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="35px"
                android:background="@drawable/act_home_msg_de"/>
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>

    <com.xinyuan.xyshop.widget.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bg_gray"
        android:layout_weight="1"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="135px"
        android:layout_gravity="bottom"
        android:background="@color/bg_white"
        android:elevation="10dp"
        android:orientation="horizontal">


        <Button
            android:layout_width="157px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/bg_white"
            android:drawableTop="@drawable/ic_store_service"
            android:padding="15px"
            android:text="客服"
            android:textColor="@color/tv_hint"
            android:textSize="@dimen/tv_small"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/colorLine"/>

        <Button
            android:layout_width="157px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/bg_white"
            android:drawableTop="@drawable/ic_store"
            android:padding="15px"

            android:text="店铺"
            android:textColor="@color/tv_hint"
            android:textSize="@dimen/tv_small"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/colorLine"/>

        <Button
            android:layout_width="157px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/bg_white"
            android:drawableTop="@drawable/ic_store_fav"
            android:padding="15px"
            android:text="收藏"
            android:textColor="@color/tv_hint"
            android:textSize="@dimen/tv_small"/>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/bg_gray"/>

        <Button
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:text="加入购物车"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/tv_Regular"/>

        <View
            android:layout_width="3px"
            android:layout_height="match_parent"
            android:background="@color/bg_white"/>

        <Button
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimaryDark"
            android:text="立即购买"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/tv_Regular"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
