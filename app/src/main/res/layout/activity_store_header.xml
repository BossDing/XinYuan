<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/store_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:background="@color/colorTransparency"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorTransparency"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goodshow_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50px"
            android:src="@drawable/icon_back_w"/>

        <LinearLayout
            android:layout_width="770px"
            android:layout_height="90px"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_bg_normal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/goodshow_et_search"
                android:layout_width="690px"
                android:layout_height="90px"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:focusableInTouchMode="false"
                android:hint="@string/search_search_hint"
                android:padding="20px"
                android:paddingLeft="10px"
                android:singleLine="true"
                android:textColor="@color/tv_name"
                android:textColorHint="@color/tv_hint"
                android:textSize="@dimen/tv_Normal"/>

            <ImageView
                android:layout_width="80px"
                android:layout_height="90px"
                android:background="@drawable/btn_bg_gray"
                android:src="@drawable/act_home_search_de"
                />


        </LinearLayout>


        <ImageView
            android:id="@+id/goodshow_btn_msg"
            android:layout_width="79px"
            android:layout_height="79px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:scaleType="fitXY"
            android:src="@drawable/act_home_msg"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="25px"
            android:layout_height="25px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10px"
            android:layout_marginTop="25px"
            android:src="@color/tv_price"/>

    </RelativeLayout>
</android.support.v7.widget.Toolbar>