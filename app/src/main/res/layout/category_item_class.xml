<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5.0dip"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tvLine"
        style="@style/Line"/>

    <RelativeLayout
        android:id="@+id/rlGoodClass"
        android:layout_width="fill_parent"
        android:layout_height="85px"
        android:background="@color/normal_bg">

        <ImageView
            android:id="@+id/tvGoodsClassDot"
            android:layout_width="18px"
            android:layout_height="18px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@drawable/nc_sharp_dot2"/>

        <TextView
            android:id="@+id/tvGoodsClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:textSize="@dimen/tv_Normal"
            android:textColor="@color/tv_name"/>

        <ImageView
            android:id="@+id/btnGoodsClass"
            android:layout_width="92px"
            android:layout_height="92px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:src="@drawable/nc_icon_more"/>
    </RelativeLayout>

    <com.xinyuan.xyshop.widget.MyGridView
        android:id="@+id/gvGoodsClass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:isScrollContainer="false"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:verticalSpacing="15px"/>
</LinearLayout>