<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAppCommonMinus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/left_round_btn"
            android:text="â€”"
            android:textColor="@color/tv_name"
            android:textSize="@dimen/tv_Normal"/>

        <TextView
            android:id="@+id/tvAppCommonCount"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_border"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/tv_hint"
            android:textSize="@dimen/tv_Regular"/>

        <Button
            android:id="@+id/btnAppCommonAdd"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/right_round_edittext"
            android:text="+"
            android:textColor="@color/tv_name"
            android:textSize="@dimen/tv_Normal"/>
    </LinearLayout>

</LinearLayout>
