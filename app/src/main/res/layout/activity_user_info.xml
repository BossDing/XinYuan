<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_gray"
              android:orientation="vertical">

    <include layout="@layout/view_header_tv_msg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@color/bg_white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_user_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/bg_white"
            android:padding="10dp">

            <TextView
                style="@style/NormalTextView"
                android:layout_centerVertical="true"
                android:text="个人头像"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/customer_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/touxiang"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_right_row"/>

        </RelativeLayout>

        <View
            style="@style/XYLine"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <RelativeLayout
            android:id="@+id/rl_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:padding="10dp">

            <TextView
                style="@style/NormalTextView"
                android:layout_centerVertical="true"
                android:text="用户名"/>

            <TextView
                android:id="@+id/tv_user_name"
                style="@style/NormalTextView"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="id2312312"/>

        </RelativeLayout>

        <View
            style="@style/XYLine"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <RelativeLayout
            android:id="@+id/rl_user_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:padding="10dp">

            <TextView
                style="@style/NormalTextView"
                android:layout_centerVertical="true"
                android:text="性别"/>

            <TextView
                android:id="@+id/tv_user_sex"
                style="@style/NormalTextView"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="女"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_right_row"/>


        </RelativeLayout>

        <View
            style="@style/XYLine"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <RelativeLayout
            android:id="@+id/rl_user_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:padding="10dp">

            <TextView
                style="@style/NormalTextView"
                android:layout_centerVertical="true"
                android:text="出生日期"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_right_row"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>