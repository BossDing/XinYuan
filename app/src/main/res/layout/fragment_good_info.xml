<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.xinyuan.xyshop.widget.SlideDetailsLayout
            android:id="@+id/sv_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/sv_goods_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.youth.banner.Banner
                            android:id="@+id/goodinfo_banner"
                            android:layout_width="match_parent"
                            android:layout_height="925px"
                            app:indicator_drawable_selected="@drawable/banner_shape"
                            app:indicator_height="24px"
                            app:indicator_margin="20px"
                            app:indicator_width="24px"/>

                        <ImageView
                            android:id="@+id/goodinfo_share"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="60px"
                            android:layout_marginTop="835px"

                            android:src="@drawable/icon_share"/>

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bg_white"
                        android:orientation="vertical"
                        android:padding="30px">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/tv_new_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥799"
                                android:textColor="@color/tv_price"
                                android:textSize="40px"/>

                            <TextView
                                android:id="@+id/tv_old_price"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="50px"
                                android:gravity="center_vertical"
                                android:text="￥799"
                                android:textColor="@color/tv_name"
                                android:textSize="32px"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30px">


                            <TextView
                                android:id="@+id/tv_goods_postage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="邮费：包邮"
                                android:textColor="@color/tv_hint"
                                android:textSize="40px"/>

                            <TextView
                                android:id="@+id/tv_goods_sellnum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50px"
                                android:gravity="center_vertical"
                                android:text="月销量：143笔"
                                android:textColor="@color/tv_hint"
                                android:textSize="36px"/>

                            <TextView
                                android:id="@+id/tv_goods_talk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50px"
                                android:gravity="center_vertical"
                                android:text="评论：82条"
                                android:textColor="@color/tv_hint"
                                android:textSize="36px"/>
                        </LinearLayout>
                        <!-- 商品保障图 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30px">

                            <ImageView
                                android:id="@+id/iv_ensure"
                                android:layout_width="700px"
                                android:layout_height="30px"
                                android:scaleType="fitXY"
                                android:src="@drawable/item_goods_ensure"/>

                        </LinearLayout>
                    </LinearLayout>


                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/llGoodDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5px"
                        android:background="@color/bg_white"
                        android:padding="30px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="促销:"
                            android:textColor="@color/tv_price"
                            android:textSize="@dimen/tv_Normal"/>

                        <TextView
                            android:id="@+id/tvGoodDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="125px"
                            android:text="满2件8折；满3件7折 。 "
                            android:textColor="@color/tv_name"
                            android:textSize="@dimen/tv_Normal"/>


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_right_more"/>
                    </com.zhy.autolayout.AutoRelativeLayout>
                    <!-- 当前已选的商品 -->
                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/ll_current_goods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5px"
                        android:background="@color/bg_white"
                        android:padding="30px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="选择"
                            android:textColor="@color/tv_name"
                            android:textSize="@dimen/tv_Normal"/>

                        <TextView
                            android:id="@+id/tv_current_goods"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="125px"
                            android:text="尺码 颜色"
                            android:textColor="@color/tv_name"
                            android:textSize="@dimen/tv_Normal"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_right_more"/>
                    </com.zhy.autolayout.AutoRelativeLayout>


                    <!-- 用户点评 -->

                    <RelativeLayout
                        android:id="@+id/ll_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5px"
                        android:background="@color/bg_white"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:padding="30px">


                        <TextView
                            android:id="@+id/tv_comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="评价（22）"
                            android:textColor="#222222"
                            android:textSize="13dp"/>


                        <ImageView
                            android:id="@+id/iv_comment_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/right_img"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvEvaluate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5px"/>
                    </RelativeLayout>

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bg_white"
                        android:padding="30px">

                        <ImageView
                            android:id="@+id/iv_good_store_img"
                            android:layout_width="180px"
                            android:layout_height="175px"
                            android:src="@drawable/test_good_store"/>

                        <TextView
                            android:id="@+id/tv_good_store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30px"
                            android:layout_toRightOf="@+id/iv_good_store_img"
                            android:text="梅子熟了 文艺复古清新女装"
                            android:textColor="@color/tv_name"/>


                        <Button
                            android:id="@+id/iv_good_store"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="190px"
                            android:layout_height="60px"
                            android:layout_marginLeft="30px"
                            android:layout_marginTop="120px"
                            android:layout_toRightOf="@+id/iv_good_store_img"
                            android:background="@drawable/good_bt_store"
                            android:button="@null"
                            android:text="进店逛逛"
                            android:textColor="@color/tv_price"
                            android:textSize="@dimen/tv_small"/>

                        <View
                            android:layout_width="2px"
                            android:layout_height="175px"
                            android:layout_marginLeft="800px"
                            android:background="@color/colorLine"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="830px"
                            android:text="宝贝描述"
                            android:textColor="@color/tv_hint"
                            android:textSize="@dimen/tv_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="830px"
                            android:layout_marginTop="75px"
                            android:text="卖家服务"
                            android:textColor="@color/tv_hint"
                            android:textSize="@dimen/tv_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="830px"
                            android:layout_marginTop="138px"
                            android:text="物流服务"
                            android:textColor="@color/tv_hint"
                            android:textSize="@dimen/tv_small"/>

                        <TextView
                            android:id="@+id/tvStoreDescPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="975px"
                            android:text="4.8"
                            android:textColor="@color/tv_price"
                            android:textSize="@dimen/tv_small"/>

                        <TextView
                            android:id="@+id/tvStoreServicePoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="975px"
                            android:layout_marginTop="75px"
                            android:text="4.8"
                            android:textColor="@color/tv_price"
                            android:textSize="@dimen/tv_small"/>

                        <TextView
                            android:id="@+id/tvStoreDeliveryPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="975px"
                            android:layout_marginTop="138px"
                            android:text="4.8"
                            android:textColor="@color/tv_price"
                            android:textSize="@dimen/tv_small"/>

                    </com.zhy.autolayout.AutoRelativeLayout>

                    <!-- 上拉查看图文详情 -->
                    <LinearLayout
                        android:id="@+id/ll_pull_up"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bg_white"
                        android:clickable="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="9dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/good_show_up"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="上拉查看图文详情"
                            android:textColor="#222222"
                            android:textSize="14dp"/>
                    </LinearLayout>


                </LinearLayout>
            </ScrollView>

            <include layout="@layout/fragment_good_itemtab"/>
        </com.xinyuan.xyshop.widget.SlideDetailsLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_up_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="200px"
            android:layout_marginRight="50px"
            android:src="@drawable/go_top"
            app:backgroundTint="#ffffff"
            app:borderWidth="0dp"
            app:fabSize="mini"
            app:rippleColor="#ffffff"/>

    </android.support.design.widget.CoordinatorLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="137px"
        android:layout_gravity="bottom"
        android:background="@color/bg_white">

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/colorLine"/>

        <Button
            android:layout_width="538px"
            android:layout_height="135px"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true"
            android:text="加入购物车"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/tv_Regular"/>

        <Button
            android:layout_width="538px"
            android:layout_height="135px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:text="立即购买"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/tv_Regular"/>


    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>