<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.xinyuan.xyshop.widget.SlideDetailsLayout
            android:id="@+id/sv_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.xinyuan.xyshop.widget.MyScrollView
                android:id="@+id/sv_goods_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <com.youth.banner.Banner
                            android:id="@+id/vp_item_goods_img"
                            android:layout_width="match_parent"
                            android:layout_height="925px"
                            android:background="@drawable/test_good"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_white"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="30px">


                                <TextView
                                    android:id="@+id/tv_new_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="￥799"
                                    android:textColor="@color/tv_price"
                                    android:textSize="40px"/>

                                <TextView
                                    android:id="@+id/tv_old_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="50px"
                                    android:gravity="center_vertical"
                                    android:text="￥799"
                                    android:textColor="@color/tv_name"
                                    android:textSize="32px"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30px">


                                <TextView
                                    android:id="@+id/tv_goods_postage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="邮费：包邮"
                                    android:textColor="@color/tv_hint"
                                    android:textSize="40px"/>

                                <TextView
                                    android:id="@+id/tv_goods_sellnum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="50px"
                                    android:gravity="center_vertical"
                                    android:text="月销量：143笔"
                                    android:textColor="@color/tv_hint"
                                    android:textSize="36px"/>

                                <TextView
                                    android:id="@+id/tv_goods_talk"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="50px"
                                    android:gravity="center_vertical"
                                    android:text="评论：82条"
                                    android:textColor="@color/tv_hint"
                                    android:textSize="36px"/>
                            </LinearLayout>
                            <!-- 商品保障图 -->
                            <ImageView
                                android:id="@+id/iv_ensure"
                                android:layout_width="700px"
                                android:layout_height="30px"
                                android:layout_margin="30px"
                                android:scaleType="fitXY"
                                android:src="@drawable/item_goods_ensure"/>

                            <LinearLayout
                                android:id="@+id/ll_activity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:descendantFocusability="afterDescendants"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:alpha="0.4"
                                    android:background="#dddddd"/>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="10dp"
                            android:alpha="0.4"
                            android:background="#dddddd"/>

                        <!-- 当前已选的商品 -->
                        <LinearLayout
                            android:id="@+id/ll_current_goods"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_white"
                            android:paddingBottom="15dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已选"
                                android:textColor="#888888"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/tv_current_goods"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:text="黑色, 1件"
                                android:textColor="#222222"
                                android:textSize="14sp"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/right_img"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:alpha="0.4"
                            android:background="#dddddd"/>


                        <!-- 用户点评 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:alpha="0.4"
                            android:background="#dddddd"/>

                        <LinearLayout
                            android:id="@+id/ll_comment"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@color/bg_white"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="用户点评"
                                    android:textColor="#222222"
                                    android:textSize="13dp"/>

                                <TextView
                                    android:id="@+id/tv_comment_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="(0)"
                                    android:textColor="#222222"
                                    android:textSize="13dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="好评度"
                                    android:textColor="#222222"
                                    android:textSize="13dp"/>

                                <TextView
                                    android:id="@+id/tv_good_comment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:text="100%"
                                    android:textColor="#ec0f38"
                                    android:textSize="13dp"/>

                                <ImageView
                                    android:id="@+id/iv_comment_right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp"
                                    android:src="@drawable/right_img"/>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:alpha="0.4"
                            android:background="#dddddd"/>

                        <LinearLayout
                            android:id="@+id/ll_empty_comment"
                            android:layout_width="match_parent"
                            android:layout_height="123dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="暂无精华评论"
                                android:textColor="#888888"
                                android:textSize="13dp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- 上拉查看图文详情 -->
                    <LinearLayout
                        android:id="@+id/ll_pull_up"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bg_white"
                        android:clickable="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="9dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/good_show_up"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="上拉查看图文详情"
                            android:textColor="#222222"
                            android:textSize="14dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.xinyuan.xyshop.widget.MyScrollView>

            <include layout="@layout/include_item_tab"/>
        </com.xinyuan.xyshop.widget.SlideDetailsLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_up_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="30dp"
            android:src="@drawable/go_top"
            app:backgroundTint="#ffffff"
            app:borderWidth="0dp"
            app:fabSize="mini"
            app:rippleColor="#ffffff"/>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>